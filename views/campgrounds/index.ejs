<% layout('layouts/boilerplate') -%>
<!-- 아래 콘텐츠가 위 경로의 ejs-mate 레이아웃 body에 전달 된다. -->

<div id="map" class="mb-3" style="width: 100%; height: 400px"></div>
  <% for (const campground of campgrounds){%>
  <a href="/campgrounds/<%= campground._id %> " style="text-decoration: none">
    <div class="card mb-3 shadow p-3 bg-body rounded">
      <div class="row">
        <div class="col-md-4">
          <img class="img-fluid" alt="" src="<%= campground.image[0] ? campground.image[0].thumbnail : 'https://res.cloudinary.com/dowpf7g5p/image/upload/w_400,h_350/v1672975612/CampInfo/aezlyketdfwj9nwuz5yr.jpg' %>"/>
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h3 class="card-body"><%= campground.title %></h3>
            <h5 class="card-tex"><%= campground.description %></h5>
            <h5 class="card-tex">
              <small class="text-muted"><%= campground.location %></small>
            </h5>
          </div>
        </div>
      </div>
    </div>
  </a>
  <% }%>
</div>
<script>
  const mapToken = '<%= process.env.MAPBOX_TOKEN %>';
  const campgrounds = '<%- JSON.stringify(campgrounds) %>';
</script>
<!-- Mapbox GL JS cluster -->
<script src="/js/markerCluster.js"></script>
