<% layout('layouts/boilerplate') -%>
<div class="row">
  <h1 class="text-center">New Campground</h1>
  <div class="col-6 offset-3">
    <!-- 부트스트랩 novalidate 속성은 브라우저 기본 validation 피드백이 아닌 자바스크립트로 사용자 정의 유효성 검사 피드백을 사용할 수 있게 해준다.-->
    <!-- 지정한 class 이름으로 폼 요소를 가져올 것 -->
    <!-- https://getbootstrap.com/docs/5.2/forms/validation/#custom-styles -->
    <form action="/campgrounds" method="POST" class="needs-validation" enctype="multipart/form-data" novalidate>
      <div class="mb-3">
        <label class="form-label" for="title">이름</label>
        <input class="form-control" type="text" id="title" name="campground[title]" required />
        <!-- 사용자 정의 validation 피드백 메시지 -->
        <div class="valid-feedback">사용 가능한 이름입니다!</div>
        <div class="invalid-feedback">이름을 입력하세요.</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">위치</label>
        <input class="form-control" type="text" id="location" name="campground[location]" required />
        <div class="invalid-feedback">유효하지 않은 위치입니다.</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="price">이용 가격</label>
        <div class="input-group mb-4">
          <span class="input-group-text" id="price-label">원</span>
          <input type="text" class="form-control" id="price" placeholder="0" aria-label="price" aria-describedby="price-label" name="campground[price]" min="0" required />
          <div class="invalid-feedback">유효하지 않은 가격입니다.</div>
        </div>
      </div>
      <!-- 이미지 파일 전송 폼 -->
      <div class="input-group mb-3">
        <input type="file" name="image" class="form-control" id="inputGroupFile04" aria-describedby="inputGroupFileAddon04" aria-label="Upload" multiple>
      </div>
      <div class="mb-3">
        <label class="form-label" for="description">설명</label>
        <textarea class="form-control" type="text" id="description" name="campground[description]" required></textarea>
        <div class="invalid-feedback">설명을 입력하세요.</div>
      </div>
      <div class="mb-3">
        <button class="btn btn-primary">확인</button>
      </div>
    </form>
    <a href="/campgrounds">취소</a>
  </div>
</div>

<!-- 클라이언트 측에서 유효하지 않은 필드 입력이 있는 경우 폼 제출을 비활성화하고 사용자 정의 피드백 메시지를 출력하기 위한 자바스크립트.-->
<script src="/js/validateForm.js"></script>

