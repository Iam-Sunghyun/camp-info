<% layout('layouts/boilerplate')%>
<div class="container d-flex mt-1 mb-3">
  <div class="justify-content-center">
    <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
      <div class="card shadow">
        <img
          src="https://images.unsplash.com/photo-1504851149312-7a075b496cc7?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&crop=bottom&w=1000&h=750"
          alt=""
          class="card-img-top"
        />
        <div class="card-body">
          <h5 class="card-title">로그인</h5>
          <form action="/users/login" method="POST" class="validated-form" novalidate>
            <div class="mb-3">
              <label class="form-label" for="username">Username</label>
              <input class="form-control" type="text" id="username" name="username" autofocus required />
              <div class="valid-feedback">Ok</div>
            </div>

            <div class="mb-3">
              <label class="form-label" for="password">Password</label>
              <input class="form-control" type="password" id="password" name="password" required />
              <div class="valid-feedback">Ok</div>
            </div>
            <div class="d-grid gap-2">
              <button class="btn btn-primary btn-block">로그인</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
